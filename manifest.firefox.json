{
    "manifest_version": 2,
    "name": "Easy Archive.is Archiver",
    "version": "1.0",
    "description": "Archives the current page using Archive.is",
    "icons": {
        "48": "media/icon.png"
    },
    "background": {
        "scripts": [
            "index.js"
        ]
    },
    "browser_action": {
        "default_icon": "media/icon.png",
        "default_title": "Archive this page"
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}