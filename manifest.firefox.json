{
    "manifest_version": 2,
    "name": "Easy Archive.is Archiver",
    "version": "1.0",
    "description": "Archives the current page using Archive.is",
    "icons": {
        "48": "icon.png"
    },
    "background": {
        "scripts": [
            "index.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Archive this page"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{02497381-8eaf-45e3-a8b8-1157b8fe6f1d}"
        }
    },
    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}